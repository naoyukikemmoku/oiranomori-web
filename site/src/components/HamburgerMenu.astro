---
import { hamburgerGroups } from "../config/nav";
---

<div class="dropdown dropdown-end">
  <button class="btn btn-outline btn-sm" aria-label="menu">Menu</button>

  <div class="dropdown-content mt-2 w-80 max-w-[90vw] rounded-box bg-base-100 shadow border border-base-300">
    <div class="p-3 grid gap-4">
      {hamburgerGroups.map((g) => (
        <section>
          <p class="text-xs opacity-70 mb-2">{g.title}</p>
          <div class="grid gap-1">
            {g.items.map((it) => (
              <a class="btn btn-ghost btn-sm justify-start" href={it.href}>{it.label}</a>
            ))}
          </div>
        </section>
      ))}
    </div>
  </div>
</div>
