---
// フッターメニュー構造（ハンバーガーと同じ）
const footerGroups = [
  {
    title: "予約・会員",
    items: [
      { label: "予約する", href: "https://www.489pro-x.com/ja/s/oiranomori/planlist/", external: true, active: true },
      { label: "予約ガイド", href: "/reservation-guide/", active: false },
      { label: "ご予約確認", href: "https://www.489pro-x.com/ja/s/oiranomori/booking/login/", external: true, active: true },
      { label: "チェックアウト", href: "/checkout/", active: false },
    ],
  },
  {
    title: "フィールド案内",
    items: [
      { label: "森のいま", href: "/now/", active: false },
      { label: "ライトフォレスト", href: "/light-guide/", active: false },
      { label: "ディープフォレスト", href: "/deep-guide/", active: false },
      { label: "アクセス", href: "/access/", active: true },
    ],
  },
  {
    title: "薪・レンタル",
    items: [
      { label: "おいらの薪", href: "/firewood/", active: false },
      { label: "レンタル・売店", href: "/firewood/#rental", active: false },
      { label: "年間パスポート", href: "/passport/", active: false },
    ],
  },
  {
    title: "森を体験",
    items: [
      { label: "過ごし方", href: "/experience/", active: false },
      { label: "焚火のすすめ", href: "/experience/#bonfire", active: false },
      { label: "キャンププラン", href: "/experience/#plans", active: false },
    ],
  },
  {
    title: "物語・記録",
    items: [
      { label: "Note", href: "https://note.com/oiranomori", external: true, active: true, icon: "note" },
      { label: "Instagram", href: "https://instagram.com/oiranomori", external: true, active: true, icon: "instagram" },
      { label: "Facebook", href: "https://facebook.com/oiranomori", external: true, active: true, icon: "facebook" },
    ],
  },
  {
    title: "サポート",
    items: [
      { label: "お知らせ", href: "/news/", active: false },
      { label: "お問い合わせ", href: "/contact/", active: false },
      { label: "よくある質問", href: "/faq/", active: false },
      { label: "利用規約", href: "/policy/#terms", active: false },
    ],
  },
];
---

<footer class="bg-zinc-900 text-zinc-300 pt-16 pb-8">
  <div class="mx-auto max-w-6xl px-4">
    <!-- ロゴとキャッチコピー -->
    <div class="mb-12">
      <div class="flex items-center gap-3 mb-4">
        <img src="/images/logo/logo-w512.png" alt="おいらの森" class="h-10 w-auto brightness-0 invert" />
        <span class="text-xl font-bold text-white">おいらの森</span>
      </div>
      <p class="text-sm opacity-75 max-w-md">
        栃木県那須烏山市にある100年の森作りを体験するキャンプ場
      </p>
    </div>

    <!-- メニューグリッド -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 mb-12">
      {footerGroups.map((group) => (
        <div>
          <h3 class="text-sm font-semibold text-white mb-3">{group.title}</h3>
          <ul class="space-y-2">
            {group.items.map((item) => (
              <li>
                {item.active ? (
                  <a
                    href={item.href}
                    class="text-sm hover:text-white transition flex items-center gap-1"
                    target={item.external ? "_blank" : undefined}
                    rel={item.external ? "noreferrer" : undefined}
                  >
                    {item.icon === "note" && (
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
                      </svg>
                    )}
                    {item.icon === "instagram" && (
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                      </svg>
                    )}
                    {item.icon === "facebook" && (
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    )}
                    {item.label}
                    {item.external && !item.icon && (
                      <svg class="w-3 h-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    )}
                  </a>
                ) : (
                  <span class="text-sm opacity-40 cursor-not-allowed">
                    {item.label}
                  </span>
                )}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- 連絡先情報 -->
    <div class="border-t border-zinc-800 pt-8 mb-8">
      <div class="grid md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-sm font-semibold text-white mb-3">お問い合わせ</h3>
          <div class="space-y-2 text-sm">
            <p class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              050-3647-1047
            </p>
            <p class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              oira@oiranomori.jp
            </p>
          </div>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-white mb-3">所在地</h3>
          <p class="text-sm">
            〒321-0622<br />
            栃木県那須烏山市福岡<br />
            （ライトフォレスト）
          </p>
        </div>
      </div>
    </div>

    <!-- コピーライト -->
    <div class="border-t border-zinc-800 pt-8 text-center text-sm opacity-60">
      <p>© {new Date().getFullYear()} おいらの森 / Forest Park Oiranomori. All rights reserved.</p>
    </div>
  </div>
</footer>
