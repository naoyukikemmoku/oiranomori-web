---
import LpLayout from "../layouts/LpLayout.astro";
---

<LpLayout title="おいらの森 | Light Forest">
  <section id="hero" class="py-16">
    <div class="mx-auto max-w-6xl px-4">
      <h1 class="text-4xl font-bold">Light Forest</h1>
      <p class="mt-3 opacity-80">まずは骨組み。あとで部品を差し込む。</p>
      <div class="mt-6">
        <button class="btn btn-primary">TEST</button>
      </div>
    </div>
  </section>

  <section id="news" class="py-16 bg-base-200/50">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-2xl font-bold">News</h2>
    </div>
  </section>

  <section id="concept" class="py-16">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-2xl font-bold">Concept</h2>
    </div>
  </section>

  <section id="worlds" class="py-16 bg-base-200/50">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-2xl font-bold">Worlds</h2>
    </div>
  </section>

  <section id="sites" class="py-16">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-2xl font-bold">Sites</h2>
    </div>
  </section>

  <section id="experiences" class="py-16 bg-base-200/50">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-2xl font-bold">Experiences</h2>
    </div>
  </section>

  <section id="access" class="py-16">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-2xl font-bold">Access</h2>
    </div>
  </section>

  <section id="cta" class="py-16 bg-base-200/50">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-2xl font-bold">CTA</h2>
    </div>
  </section>
</LpLayout>
