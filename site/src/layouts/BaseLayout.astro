---
import "../styles/global.css";

const { title = "おいらの森", description = "" } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>

  <body>
    <!-- ヘッダー（仮） -->
    <header class="border-b">
      <div class="container-oir py-4 flex items-center justify-between">
        <a href="/" class="font-semibold">おいらの森</a>
        <nav class="flex items-center gap-4 text-sm">
          <a href="/guide/">利用案内</a>
          <a href="/access/">アクセス</a>
          <a class="btn-primary" href="/reservation-guide/">予約する</a>
        </nav>
      </div>
    </header>

    <!-- ここに各ページの中身が入る -->
    <main>
      <slot />
    </main>

    <!-- フッター（仮） -->
    <footer class="border-t">
      <div class="container-oir py-10 text-sm text-zinc-600">
        © {new Date().getFullYear()} おいらの森
      </div>
    </footer>
  </body>
</html>
