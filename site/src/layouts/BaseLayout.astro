---
import "../styles/global.css";

const { title = "おいらの森", description = "" } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>

  <body>

    <!-- ここに各ページの中身が入る -->
    <main>
      <slot />
    </main>

    <!-- フッター（仮） -->
    <footer class="border-t">
      <div class="container-oir py-10 text-sm text-zinc-600">
        © {new Date().getFullYear()} おいらの森
      </div>
    </footer>
  </body>
</html>
