---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import FloatingNav from "../components/FloatingNav.astro";
import ReserveCTA from "../components/ReserveCTA.astro";

const { title = "おいらの森", heading = "" } = Astro.props;
---

<BaseLayout title={title}>
  <Header />
  <FloatingNav />
  <ReserveCTA />

  <main class="mx-auto max-w-6xl px-4 pb-10 pt-[calc(var(--header-offset)+1.25rem)]">
    {heading && <h1 class="mb-6">{heading}</h1>}
    <slot />
  </main>
</BaseLayout>
